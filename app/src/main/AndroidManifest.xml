<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.herroj.android.lunchtimefrontend.app">

    <!--RHR 2.06 add internet permissions-->
    <!-- This permission is necessary in order for Sunshine to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RestaurantMainActivity"
            android:theme="@style/RestaurantTheme"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RestaurantDetailActivity"
            android:label="@string/title_activity_restaurant_detail"
            android:parentActivityName=".RestaurantMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.herroj.android.lunchtimefrontend.app.RestaurantMainActivity" />
        </activity>
        <activity
            android:name=".RestaurantSettingsActivity"
            android:label="@string/title_activity_restaurant_settings"
            android:parentActivityName=".RestaurantMainActivity"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.herroj.android.lunchtimefrontend.app.RestaurantMainActivity" />
        </activity>

        <provider
            android:name=".data.RestaurantProvider"
            android:authorities="com.herroj.android.lunchtimefrontend.app" />
        <service android:name=".service.LunchTimeService"/>
        <receiver android:name=".service.LunchTimeService$AlarmReceiver" android:enabled="true"/>
    </application>

</manifest>